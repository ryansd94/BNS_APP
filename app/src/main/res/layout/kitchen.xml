<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/kitchen_background_left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/color_kitchen_layout_title_left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="@dimen/padding_small"
                android:textColor="@color/color_text_button"
                android:gravity="center"
                android:textSize="@dimen/textSize_Medium"
                android:text="@string/wailting_process"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:layout_gravity="right"
                android:text="@string/prioritize"
                android:visibility="invisible"
                android:layout_marginLeft="@dimen/padding_small"
                android:background="@drawable/button_uutien_background"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <Button
                android:text="@string/all"
                android:visibility="invisible"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_marginRight="@dimen/padding_small"
                android:background="@drawable/button_tatca_background"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>
        <GridView
            android:verticalSpacing="@dimen/padding_medium"
            android:padding="@dimen/padding_small"
            android:id="@+id/grdKitchenUnProcess"
            android:numColumns="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </GridView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/color_kitchen_layout_title_right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:paddingLeft="@dimen/padding_small"
                android:textColor="@color/color_text_button"
                android:gravity="center"
                android:textSize="@dimen/textSize_Medium"
                android:text="@string/complete_kitchen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <GridView
            android:verticalSpacing="@dimen/padding_medium"
            android:padding="@dimen/padding_small"
            android:id="@+id/grdKitchenWailProcess"
            android:numColumns="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </GridView>
    </LinearLayout>
</LinearLayout>
