<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Control.MyImageView
        android:id="@+id/image_product_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        android:background="@color/color_while"
        android:id="@+id/txtQuantity"
        android:textAlignment="center"
        android:padding="3dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/textSize_SupperSmall"
        android:id="@+id/txtProductName"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_suppersmall"
        android:layout_gravity="bottom"
        android:textColor="@android:color/white"
        android:background="#2e000000"/>

    <TextView
        android:id="@+id/txtPrice"
        android:textStyle="bold|italic"
        android:textColor="@color/color_quantity"
        android:paddingRight="@dimen/padding_small"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtProductID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <TextView
        android:id="@+id/txtProductCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</FrameLayout>