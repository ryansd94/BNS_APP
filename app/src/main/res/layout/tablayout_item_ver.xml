<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <FrameLayout
        android:paddingTop="@dimen/padding_suppersmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingTop="@dimen/padding_suppersmall"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="centerInside"
            android:id="@+id/nav_icon"/>
        <TextView
            android:visibility="gone"
            android:background="@drawable/number_notify_background"
            android:id="@+id/nav_number"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:textColor="@color/color_while"
            android:text="10"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </FrameLayout>


    <TextView
        android:textSize="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/nav_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_tablayout"
        android:shadowColor="@android:color/black"/>

</LinearLayout>